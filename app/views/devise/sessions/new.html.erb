<div class="body_devise_login">
  <div class="login">
<div class="login_title">
<%= I18n.t'users-login.login' %> 
</div>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="login_form_email"><%= f.label :"#{I18n.t'users-login.email'}" %><br />
  <%= f.email_field :email, autofocus: true %></div>

  <div class="login_form_password"><%= f.label :"#{I18n.t'users-login.password'}" %><br />
    <%= f.password_field :password, autocomplete: "off" %></div>

  <% if devise_mapping.rememberable? -%>
    <div class="login_form_remember_me"><%= f.check_box :remember_me %> <%= f.label :"#{I18n.t'users-login.remember-me'}" %></div>
  <% end -%>

  <div class="login_form_submit"><%= f.submit "#{I18n.t'users-login.login'}" %></div>
<% end %>
<div class="login_shared_links">
  <%= render "devise/shared/links" %>
</div>
</div>

</div>